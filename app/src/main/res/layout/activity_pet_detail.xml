<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetDetailActivity">

    <TextView
        android:id="@+id/textNameHeader"
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:elevation="16dp"
        android:padding="16dp"
        android:text="@string/default_pet_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imagePetHeader"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNameHeader"
        app:srcCompat="@drawable/noir" />

    <TextView
        android:id="@+id/textPetCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noa jeguk"
        android:lineHeight="24dp"
        android:textSize="18sp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePetHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>